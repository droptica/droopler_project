{
	"name": "droptica/droopler-project",
	"description": "Project template for Droopler with composer",
	"type": "project",
	"license": "GPL-2.0+",
	"authors": [{
		"name": "",
		"role": ""
	}],
	"repositories": {
	    "drupal": {
			"type": "composer",
			"url": "https://packages.drupal.org/8",
            "exclude": [
                "drupal/system_status"
            ]
		},
		"asset": {
			"type": "composer",
			"url": "https://asset-packagist.org"
		},
        "system_status": {
            "type": "package",
            "package": {
                "name": "drupal/system_status",
                "version": "2.8.0",
                "type": "drupal-module",
                "source": {
                    "type": "git",
                    "url": "https://git.drupalcode.org/issue/system_status-3299281",
                    "reference": "3299281-automated-drupal-10"
                }
            }
        }
	},
	"require": {
        "php": ">=8.1",
		"composer/installers": "^2.2",
		"cweagans/composer-patches": "^1.7",
		"droptica/d_application_api": "^1.0",
        "droptica/droopler": "8.3.3.0-rc1",
		"drupal/core-composer-scaffold": "^10.0",
		"drupal/core-recommended": "^10.0",
		"drupal/eu_cookie_compliance": "^1.24",
		"drupal/upgrade_status": "^4.0",
        "drupal/system_status": "^2.8",
        "drupal/devel": "^5.0",
        "drush/drush": "^12.0",
        "drupal/lazy": "^3.12",
		"oomphinc/composer-installers-extender": "^2.0",
		"webflo/drupal-finder": "^1.2.0",
		"webmozart/path-util": "^2.3",
        "drupal/advagg": "^6.0@alpha",
        "drupal/we_megamenu": "^1.16",
        "drupal/rdf": "^2.1"
	},
	"require-dev": {
        "drupal/core-dev": "^10.0",
        "droptica/codeception-package": "10.8.0"
	},
	"conflict": {
		"drupal/drupal": "*"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/console-extend-plugin": true,
            "drupal/core-composer-scaffold": true,
            "oomphinc/composer-installers-extender": true,
            "zaporylie/composer-drupal-optimizations": true,
            "phpstan/extension-installer": true
        }
	},
	"scripts": {
		"drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
	},
	"extra": {
		"installer-types": ["bower-asset", "npm-asset"],
		"installer-paths": {
			"web/core": ["type:drupal-core"],
			"web/libraries/{$name}": ["type:drupal-library", "type:git", "type:bower-asset", "type:npm-asset"],
			"web/modules/contrib/{$name}": ["type:drupal-module"],
			"web/profiles/contrib/{$name}": ["type:drupal-profile"],
			"web/themes/contrib/{$name}": ["type:drupal-theme"],
			"drush/contrib/{$name}": ["type:drupal-drush"]
		},
		"drupal-scaffold": {
			"locations": {
				"web-root": "web/"
			}
		},
        "patches": {
            "drupal/advagg": {
                "Deprecated function rtrim fix": "https://www.drupal.org/files/issues/2022-12-13/3258389-57.patch"
            }
        }
    }
}
