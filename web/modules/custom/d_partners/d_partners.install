      if (!$file) {
        $file = File::create([
          'uri' => $logoUri,
        ]);
        $file->save();
      }

      $partner = Node::create(['type' => 'partners']);
      $partner->set('title', $title);
      $partner->set('body', 'Firma zajmujÄ…ca siÄ™ budowÄ… serwisÃ³w internetowych opartych o system Drupal');
